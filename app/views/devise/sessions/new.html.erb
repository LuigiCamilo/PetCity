<section class="get-in-touch section_form">
   <h1 class="title">Log in</h1>
   <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "contact-form row" }) do |f| %>
      <div class="form-field col-lg-6">
         <%= f.input :email, required: false, autofocus: true, input_html: { autocomplete: "email", class: "input-text js-input", id: "email" } %>
      </div>
      <div class="form-field col-lg-6">
         <%= f.input :password, required: false, input_html: { autocomplete: "current-password", class: "input-text js-input", id: "password" } %>
      </div>
      <div class="form-field col-lg-12">
         <%= f.input :remember_me, as: :boolean, label: "Remember me", input_html: { class: "form-check-input", id: "remember_me" } if devise_mapping.rememberable? %>
      </div>
      <div class="form-actions col-lg-12 d-flex">
         <%= f.button :submit, "Log in", class: "submit-btn btn btn-error" %>
      </div>
   <% end %>
   <%= render "devise/shared/links" %>
</section>
