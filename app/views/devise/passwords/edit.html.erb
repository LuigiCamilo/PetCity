<section class="get-in-touch">
   <h1 class="title">Change your password</h1>
   <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "contact-form row" }) do |f| %>
      <%= f.error_notification %>
      <%= f.input :reset_password_token, as: :hidden %>
      <%= f.full_error :reset_password_token %>
      <div class="form-field col-lg-12">
         <%= f.input :password, label: "New password", required: true, autofocus: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), input_html: { autocomplete: "new-password", class: "input-text js-input", id: "password" } %>
      </div>
      <div class="form-field col-lg-12">
         <%= f.input :password_confirmation, label: "Confirm your new password", required: true, input_html: { autocomplete: "new-password", class: "input-text js-input", id: "password_confirmation" } %>
      </div>
      <div class="form-actions col-lg-12 d-flex">
         <%= f.button :submit, "Change my password", class: "submit-btn btn btn-warning" %>
      </div>
   <% end %>
</section>



















