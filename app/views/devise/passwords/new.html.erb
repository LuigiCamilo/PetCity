<section class="get-in-touch">
   <h1 class="title">Forgot your password?</h1>
   <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "contact-form row" }) do |f| %>
      <%= f.error_notification %>
      <div class="form-field col-lg-12">
         <%= f.input :email, required: true, autofocus: true, input_html: { autocomplete: "email", class: "input-text js-input", id: "email" } %>
      </div>
      <div class="form-actions col-lg-12">
         <%= f.button :submit, "Send me instructions", class: "submit-btn btn btn-warning btn-lg", style: "font-size: 16px; width: 50%" %>
      </div>
   <% end %>
   <%= render "devise/shared/links" %>
</section>






